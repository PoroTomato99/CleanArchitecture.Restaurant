@{
    Layout = "_Layout";
}

@model Restaurant.Application.ViewModel.AdminViewModel;
@using Restaurant.Domain.AuthenticationModel;
@if (Model.Users != null && Model.Profiles != null)
{


    <table class="table table-sm table-bordered">
        <thead>
            <tr>
                <th>Username</th>
                <th>First Name</th>
                <th> Last Name</th>
                <th> Role Requested </th>
                <th>Date Requested</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var x in Model.Profiles)
            {
                <tr>
                    <td> @x.Username</td>
                    <td> @x.FirstName</td>
                    <td> @x.LastName</td>
                    <td> @x.Role</td>
                    <td> @x.DateRequested</td>
                    <td>
                        <a href="/Admin/UserDetail?username=@x.Username" class="btn btn-sm btn-primary">
                            Details
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger" role="alert">
        <p>
            Oops! No Users Yet!
        </p>
    </div>
}